<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/ml_dimen_4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ml_dimen_16"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ml_shape_bg_text"
            android:paddingBottom="@dimen/ml_dimen_8"
            android:paddingLeft="@dimen/ml_dimen_16"
            android:paddingRight="@dimen/ml_dimen_16"
            android:paddingTop="@dimen/ml_dimen_8"
            android:text="@string/ml_message_header"
            android:textColor="@color/ml_text_gray"
            android:textSize="@dimen/ml_size_12" />
    </LinearLayout>
</LinearLayout>