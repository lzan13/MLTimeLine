<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--toolbar-->
    <include layout="@layout/ml_toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <net.melove.app.ml.views.MLImageView
                android:id="@+id/ml_img_note_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/ml_dimen_8"
                android:maxHeight="@dimen/ml_dimen_72"
                android:maxWidth="@dimen/ml_dimen_72"
                android:src="@mipmap/icon_insert_photo_grey600_48dp"
                melove:border_color="@color/ml_border_white"
                melove:border_width="@dimen/ml_dimen_1"
                melove:press_alpha="20"
                melove:press_color="@color/ml_view_press_red"
                melove:radius="@dimen/ml_dimen_4"
                melove:shape_type="rectangle" />

            <EditText
                android:id="@+id/ml_edit_note_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/ml_dimen_0"
                android:layout_toRightOf="@id/ml_img_note_img"
                android:background="@color/ml_transparent"
                android:gravity="left|top"
                android:hint="@string/ml_note_add_msg"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:padding="@dimen/ml_dimen_8"
                android:scrollbars="vertical" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ml_reserved_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</LinearLayout>