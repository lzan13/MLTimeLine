<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".moment.MomentCreateActivity"
    >

    <com.vmloft.develop.app.timeline.widget.VMTopBar
        android:id="@+id/widget_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vm_theme_background"
        >

        <com.vmloft.develop.library.tools.widget.VMImageView
            android:id="@+id/img_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/vm_margin_large"
            android:maxHeight="@dimen/vm_dimen_72"
            android:maxWidth="@dimen/vm_dimen_72"
            android:src="@drawable/ic_image"
            android:tint="@color/vm_gray_54"
            app:vm_border_color="@color/vm_red_12"
            app:vm_border_width="@dimen/vm_dimen_2"
            app:vm_dispatch_touch_event="false"
            app:vm_press_alpha="20"
            app:vm_press_color="@color/vm_red_38"
            app:vm_radius="@dimen/vm_dimen_4"
            app:vm_shape_type="rectangle"
            />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/img_image"
            android:hint="@string/moment_thinking"
            style="@style/VMEdit.MultiLine"
            />
    </RelativeLayout>
</LinearLayout>