<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/ml_dimen_8">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_clock_white_18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ml_dimen_2"
        android:background="@mipmap/bg_message_bubble"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ml_text_message_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ml_dimen_8"
            android:text="@string/ml_hello"
            android:textColor="@color/ml_text_block"
            android:textSize="@dimen/ml_size_14" />
    </LinearLayout>
</LinearLayout>