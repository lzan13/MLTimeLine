<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ml_drawer_menu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ml_drawer_item_activate">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ml_dimen_48"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ml_img_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ml_dimen_16"
            android:src="@mipmap/icon_settings_gray_24dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/ml_text_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ml_dimen_48"
        android:layout_marginLeft="@dimen/ml_dimen_72"
        android:gravity="center_vertical"
        android:text="@string/ml_hello"
        android:textColor="@color/ml_drawer_item_text_activate"
        android:textSize="@dimen/ml_size_14" />
</RelativeLayout>