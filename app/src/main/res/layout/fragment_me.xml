<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_overall"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vm_margin_large"
        >

        <ImageButton
            android:id="@+id/img_qr"
            android:layout_width="@dimen/vm_dimen_48"
            android:layout_height="@dimen/vm_dimen_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_qrcode"
            android:tint="@color/vm_black_54"
            />

        <com.vmloft.develop.library.tools.widget.VMImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/dimen_72"
            android:layout_height="@dimen/dimen_72"
            android:layout_marginRight="@dimen/dimen_8"
            android:src="@drawable/ic_default_avatar_spider"
            melove:vm_border_color="@color/avatar_border"
            melove:vm_border_width="@dimen/dimen_4"
            melove:vm_dispatch_touch_event="false"
            melove:vm_press_alpha="20"
            melove:vm_press_color="@color/vm_black_12"
            melove:vm_shape_type="round"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_avatar"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/VMText.Subhead"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/VMText.Body2"
                />
        </LinearLayout>
    </RelativeLayout>
    <!--设置-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vm_dimen_48"
        android:background="@color/background_light"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/vm_margin_large"
            android:src="@drawable/ic_settings_2"
            android:tint="@color/vm_blue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/vm_dimen_56"
            android:text="@string/setting"
            style="@style/VMText.Subhead"
            />
    </RelativeLayout>
</LinearLayout>
