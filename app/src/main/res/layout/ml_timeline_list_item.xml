<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ml_transparent"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ml_dimen_8"
        android:layout_marginLeft="@dimen/ml_dimen_8"
        android:layout_marginRight="@dimen/ml_dimen_8"
        android:layout_marginTop="@dimen/ml_dimen_8"
        android:clipChildren="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <net.melove.app.ml.views.MLImageView
                android:id="@+id/ml_img_timeline_avatar"
                android:layout_width="@dimen/ml_dimen_36"
                android:layout_height="@dimen/ml_dimen_36"
                android:src="@mipmap/icon_avatar_default"
                melove:border_color="@color/ml_border_white"
                melove:border_width="@dimen/ml_dimen_1"
                melove:press_alpha="20"
                melove:press_color="@color/ml_view_press_red"
                melove:radius="@dimen/ml_dimen_2"
                melove:shape_type="round" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ml_layout_timeline_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ml_dimen_4"
            android:background="@mipmap/bg_note_bubble"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/ml_dimen_8">

                <TextView
                    android:id="@+id/ml_text_timeline_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ml_test_text"
                    android:textColor="@color/ml_block" />

                <net.melove.app.ml.views.MLImageView
                    android:id="@+id/ml_img_timeline_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ListView
                    android:id="@+id/ml_listview_timeline_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:divider="@color/ml_transparent"
                    android:dividerHeight="@dimen/ml_dimen_0">

                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>