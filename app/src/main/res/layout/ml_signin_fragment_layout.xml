<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/ml_dimen_0"
    android:focusable="true"
    android:padding="@dimen/ml_dimen_0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <net.melove.app.ml.views.MLImageView
                android:id="@+id/ml_img_signin_avatar"
                android:layout_width="@dimen/ml_dimen_72"
                android:layout_height="@dimen/ml_dimen_72"
                android:layout_margin="@dimen/ml_dimen_8"
                android:src="@mipmap/icon_avatar_default"
                melove:border_color="@color/ml_border_white"
                melove:border_width="@dimen/ml_dimen_4"
                melove:press_alpha="0"
                melove:radius="@dimen/ml_dimen_24"
                melove:shape_type="round" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:padding="@dimen/ml_dimen_24">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ml_dimen_24"
                android:layout_marginLeft="@dimen/ml_dimen_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_clock_white_18dp" />

                <View
                    android:layout_width="@dimen/ml_dimen_4"
                    android:layout_height="@dimen/ml_dimen_1"
                    android:layout_margin="@dimen/ml_dimen_4"
                    android:background="@color/ml_bg_gray_white" />

                <Button
                    android:id="@+id/ml_btn_goto_signup"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ml_dimen_48"
                    android:background="@drawable/ml_shape_bg_btn_sign"
                    android:shadowColor="@color/ml_gray"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:text="@string/ml_signup_goto"
                    android:textColor="@color/ml_btn_text_color_white"
                    android:textSize="@dimen/ml_size_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ml_dimen_8"
                android:layout_marginLeft="@dimen/ml_dimen_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_clock_white_18dp" />

                <View
                    android:layout_width="@dimen/ml_dimen_4"
                    android:layout_height="@dimen/ml_dimen_1"
                    android:layout_margin="@dimen/ml_dimen_4"
                    android:background="@color/ml_bg_gray_white" />

                <EditText
                    android:id="@+id/ml_edit_signinname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ml_dimen_48"
                    android:background="@drawable/ml_shape_bg_edittext_sign"
                    android:drawableLeft="@mipmap/icon_account_circle_gray_24dp"
                    android:drawablePadding="@dimen/ml_dimen_8"
                    android:hint="@string/ml_account_or_email"
                    android:inputType="text"
                    android:maxLength="32"
                    android:paddingLeft="@dimen/ml_dimen_8"
                    android:shadowColor="@color/ml_gray"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:singleLine="true"
                    android:textColor="@color/ml_white"
                    android:textColorHint="@color/ml_text_gray_white"
                    android:textSize="@dimen/ml_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ml_dimen_8"
                android:layout_marginLeft="@dimen/ml_dimen_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_clock_white_18dp" />

                <View
                    android:layout_width="@dimen/ml_dimen_4"
                    android:layout_height="@dimen/ml_dimen_1"
                    android:layout_margin="@dimen/ml_dimen_4"
                    android:background="@color/ml_bg_gray_white" />

                <EditText
                    android:id="@+id/ml_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ml_dimen_48"
                    android:background="@drawable/ml_shape_bg_edittext_sign"
                    android:drawableLeft="@mipmap/icon_lock_gray_24dp"
                    android:drawablePadding="@dimen/ml_dimen_8"
                    android:hint="@string/ml_password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingLeft="@dimen/ml_dimen_8"
                    android:shadowColor="@color/ml_gray"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="5"
                    android:singleLine="true"
                    android:textColor="@color/ml_white"
                    android:textColorHint="@color/ml_text_gray_white"
                    android:textSize="@dimen/ml_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ml_dimen_24"
                android:layout_marginLeft="@dimen/ml_dimen_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_clock_white_18dp" />

                <View
                    android:layout_width="@dimen/ml_dimen_4"
                    android:layout_height="@dimen/ml_dimen_1"
                    android:layout_margin="@dimen/ml_dimen_4"
                    android:background="@color/ml_bg_gray_white" />

                <Button
                    android:id="@+id/ml_btn_signin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ml_dimen_48"
                    android:background="@drawable/ml_shape_bg_btn_sign"
                    android:shadowColor="@color/ml_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="@string/ml_signin"
                    android:textColor="@color/ml_btn_text_color_white"
                    android:textSize="@dimen/ml_size_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ml_dimen_24"
                android:layout_marginLeft="@dimen/ml_dimen_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_clock_white_18dp" />

                <View
                    android:layout_width="@dimen/ml_dimen_4"
                    android:layout_height="@dimen/ml_dimen_1"
                    android:layout_margin="@dimen/ml_dimen_4"
                    android:background="@color/ml_bg_gray_white" />

                <Button
                    android:id="@+id/ml_btn_forget_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ml_dimen_48"
                    android:background="@drawable/ml_shape_bg_btn_sign"
                    android:shadowColor="@color/ml_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="@string/ml_forget_password"
                    android:textColor="@color/ml_btn_text_color_white"
                    android:textSize="@dimen/ml_size_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ml_dimen_4"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_clock_white_18dp" />

                <View
                    android:layout_width="@dimen/ml_dimen_4"
                    android:layout_height="@dimen/ml_dimen_1"
                    android:layout_margin="@dimen/ml_dimen_4"
                    android:background="@color/ml_bg_gray_white" />

                <TextView
                    android:id="@+id/ml_text_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/ml_gray"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="5"
                    android:text="@string/ml_copyright"
                    android:textColor="@color/ml_text_white"
                    android:textSize="@dimen/ml_size_14" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>