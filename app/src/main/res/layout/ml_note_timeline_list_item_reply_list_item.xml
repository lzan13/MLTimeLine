<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ml_transparent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/ml_dimen_8"
    android:paddingTop="@dimen/ml_dimen_8">

    <RelativeLayout
        android:layout_width="@dimen/ml_dimen_48"
        android:layout_height="@dimen/ml_dimen_48"
        android:layout_margin="@dimen/ml_dimen_0"
        android:gravity="center"
        android:padding="@dimen/ml_dimen_0">

        <net.melove.app.ml.views.MLImageView
            android:id="@+id/ml_img_timeline_reply_avatar"
            android:layout_width="@dimen/ml_dimen_36"
            android:layout_height="@dimen/ml_dimen_36"
            android:src="@mipmap/icon_avatar_default"
            melove:press_alpha="56"
            melove:press_color="@color/ml_blue"
            melove:shape_type="round" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ml_dimen_8"
        android:layout_marginRight="@dimen/ml_dimen_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ml_text_timeline_reply_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ml_dimen_4"
                android:text="@string/ml_nickname" />

            <TextView
                android:id="@+id/ml_text_timeline_reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/ml_dimen_4"
                android:text="@string/ml_hello"
                android:textColor="@color/ml_block" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ml_text_timeline_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ml_hello" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>