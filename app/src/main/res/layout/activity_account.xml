<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vm_theme_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".account.AccountActivity"
    >
    <com.vmloft.develop.app.timeline.widget.VMTopBar
        android:id="@+id/widget_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vm_margin_large"
        >

        <com.vmloft.develop.library.tools.widget.VMImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/vm_dimen_128"
            android:layout_height="@dimen/vm_dimen_128"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_default_avatar_spider"
            app:vm_border_color="@color/avatar_border"
            app:vm_border_width="@dimen/dimen_4"
            app:vm_dispatch_touch_event="false"
            app:vm_press_alpha="20"
            app:vm_press_color="@color/vm_black_12"
            app:vm_shape_type="round"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/img_avatar"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/VMText.Headline"
                />
            <TextView
                android:id="@+id/text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/VMText.Body2"
                />
            <!--快速操作按钮-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vm_margin_normal"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="@dimen/vm_dimen_40"
                    android:layout_height="@dimen/vm_dimen_40"
                    android:background="@drawable/shape_round_gray"
                    android:src="@drawable/ic_add"
                    />
                <ImageButton
                    android:id="@+id/btn_video_call"
                    android:layout_width="@dimen/vm_dimen_40"
                    android:layout_height="@dimen/vm_dimen_40"
                    android:layout_marginEnd="@dimen/vm_margin_normal"
                    android:layout_marginStart="@dimen/vm_margin_normal"
                    android:background="@drawable/shape_round_gray"
                    android:src="@drawable/ic_video_call"
                    />
                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="@dimen/vm_dimen_40"
                    android:layout_height="@dimen/vm_dimen_40"
                    android:background="@drawable/shape_round_gray"
                    android:src="@drawable/ic_home"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>